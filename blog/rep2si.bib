  keywords = {altruism,Cooperation,Gossip,ostracism,Partner choice,Punishment,Reputation,social behavior,Social dilemmas,social interaction}
}

@article{feinberg_liberating_2012,
  title = {Liberating Reason from the Passions Overriding Intuitionist Moral Judgments through Emotion Reappraisal},
