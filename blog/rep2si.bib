@incollection{ray_aspirations_2006,
  title = {Aspirations, Poverty, and Economic Change},
  booktitle = {Understanding Poverty},
  author = {Ray, Debraj},
  editor = {Banerjee, Abhijit V. and Benabou, Roland and Mookherjee, Dilip},
