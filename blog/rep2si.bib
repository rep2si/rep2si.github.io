@article{nowak_upstream_2007,
  title = {Upstream Reciprocity and the Evolution of Gratitude},
  author = {Nowak, Martin A. and Roch, S{\'e}bastien},
  year = {2007},
  month = mar,
  journal = {Proceedings of the Royal Society B: Biological Sciences},
  volume = {274},
  number = {1610},
  pages = {605--610},
  doi = {10.1098/rspb.2006.0125},
  urldate = {2009-12-21},
  abstract = {If someone is nice to you, you feel good and may be inclined to be nice to somebody else. This every day experience is borne out by experimental games: the recipients of an act of kindness are more likely to help in turn, even if the person who benefits from their generosity is somebody else. This behaviour, which has been called `upstream reciprocity', appears to be a misdirected act of gratitude: you help somebody because somebody else has helped you. Does this make any sense from an evolutionary or a game theoretic perspective? In this paper, we show that upstream reciprocity alone does not lead to the evolution of cooperation, but it can evolve and increase the level of cooperation if it is linked to either direct or spatial reciprocity. We calculate the random walks of altruistic acts that are induced by upstream reciprocity. Our analysis shows that gratitude and other positive emotions, which increase the willingness to help others, can evolve in the competitive world of natural selection.},
  keywords = {cooperation,direct reciprocity,indirect reciprocity,upstream indirect reciprocity}
}

@article{ockenfels_beliefs_2014,
  title = {Beliefs and Ingroup Favoritism},
