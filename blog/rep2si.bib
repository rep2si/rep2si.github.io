  langid = {english},
  keywords = {Assistance (Social Behavior),Charitable Behavior,Prosocial Behavior (major),prosociality,Social Class (major),socioeconomic status,Socioeconomic Status (major),status,Sympathy,Trust (Social Behavior)}
}

@article{piff_higher_2012,
