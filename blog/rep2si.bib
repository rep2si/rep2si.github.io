}

@article{pedullaHowRaceUnemployment2018,
  title = {How Race and Unemployment Shape Labor Market Opportunities: Additive, Amplified, or Muted Effects?},
  shorttitle = {How Race and Unemployment Shape Labor Market Opportunities},
  author = {Pedulla, David S},
