  journal = {Journal of Economic Behavior \& Organization},
  volume = {108},
  pages = {453--462},
  issn = {0167-2681},
  doi = {10.1016/j.jebo.2013.12.003},
  urldate = {2025-01-15},
  abstract = {We report on two experiments designed to investigate the role of beliefs for ingroup favoritism. On average, dictators transfer substantially more to recipients who are publicly known to share the same group identity, compared to transfers given to recipients who are publicly known to be outgroup matches. However, there is substantially less ingroup favoritism if the dictator is informed that the recipient is unaware of the shared group membership. Moreover, dictators tend to ask less often for information about a recipient's identity if disclosure would imply that the dictator's identity is also disclosed to the recipient. The evidence supports the view that ingroup favoritism is partly belief-dependent, in addition to the notion that shared group identity per se changes charity preferences.},
  keywords = {Dictator game,Expectations,Group identity}
}

