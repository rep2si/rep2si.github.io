@misc{aksoy_making_2023,
  title = {Making Sense of Honor Killings?},
  author = {Aksoy, Ozan and Szekely, Aron},
  year = {2023},
  month = oct,
  publisher = {OSF},
  doi = {10.31235/osf.io/j63k9},
  urldate = {2025-01-12},
  abstract = {Honor killings, which occur when women are perceived to have broken purity norms and bring ``dishonor'' to their family, pose profound moral and public health problems and underrecognized deep sociological puzzles. Given the immense cost, why do families murder their own daughter, niece, or cousin? And, conversely, given the tragic consequences, why does norm breaking happen in the first place? Drawing on accounts of honor killings, we characterize the key actors, actions, and incentives, and develop two interlinked theoretical models that yield sharp predictions for norms and killings. Counterintuitively, our models predict that honor killings occur most frequently when honor norms are contested; not when they are strictest. Analyzing a large-scale dataset (25 countries, 26,000 individuals) on attitudes towards honor killings and building a unique a dataset of honor killings from Turkey, we find broad support for the hypotheses. Our work advances the theoretical understanding of honor norms and killings and provides one of the most comprehensive empirical analyses of the factors that increase or decrease them.},
  archiveprefix = {OSF},
  langid = {american}
}

